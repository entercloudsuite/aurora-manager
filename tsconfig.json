{
    "compilerOptions": {
        "target": "es6",
        "rootDirs": ["./app/", "./test"],
        "outDir": "./build/",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "baseUrl": ".",
        "typeRoots": [
          "./node_modules/@types"
        ]
    },
    "include": [
        "app/app.ts",
        "test/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}